@using Microsoft.AspNetCore.Identity
@using OCR_AccessControl.Models

<div class="sidebar bg-dark text-white vh-100 d-flex flex-column p-3">
    <div class="profile d-flex flex-column align-items-center mb-5">
        <img src="~/logo1.png" class="logo-head mb-3" alt="Logo">
        <h3 class="text-center fs-5 fw-bold">OCR Access Control</h3>
    </div>
    <nav class="nav flex-column flex-grow-1">
        <!-- Dashboard Link -->
        <a class="nav-link text-white d-flex align-items-center mb-3" asp-area="" asp-action="Index" asp-controller="Dashboard">
            <span class="icon me-2">
                <i class="fa-regular fa-window-maximize fa-xl"></i>
            </span>
            <span class="title dashboard">DASHBOARD</span>
        </a>

        <!-- LOPEZ GATE Button -->
        <a class="nav-link text-white d-flex align-items-center mb-3" id="lopezGate" href="javascript:void(0);">
            <span class="title lopez">GATE 1</span>
        </a>

        <!-- Additional Navigation Buttons (Hidden by Default) -->
        <div id="additionalNav" style="display: none;">
            <!-- Entries Link -->
            <a class="nav-link text-white d-flex align-items-center mb-3" asp-area="" asp-action="Entries" asp-controller="Dashboard">
                <span class="title">Non-Resident Logs</span>
            </a>

            <!-- Time In Link -->
            <a class="nav-link text-white d-flex align-items-center mb-3" asp-area="" asp-action="TimeIn" asp-controller="Dashboard">
                <span class="title">Entries</span>
            </a>

            <!-- Time Out Link -->
            <a class="nav-link text-white d-flex align-items-center mb-3" asp-area="" asp-action="TimeOut" asp-controller="Dashboard">
                <span class="title">Exits</span>
            </a>

            <!-- Overdues Link -->
            <a class="nav-link text-white d-flex align-items-center mb-3" asp-area="" asp-action="Overdues" asp-controller="Dashboard">
                <span class="title">Overdue Stay</span>
            </a>
        </div>

        <!-- Logout Button -->
        <form class="mt-auto" asp-action="Logout" asp-controller="User" method="post">
            <button type="submit" class="btn btn-danger w-100">Logout</button>
        </form>
    </nav>
</div>